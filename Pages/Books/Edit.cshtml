@model Moldovan_Alex_Lab2.Pages.Books.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Book Title -->
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>

            <!-- Author -->
            <div class="form-group">
                <label asp-for="Book.Authors" class="control-label"></label> <!-- Asigură-te că este Author -->
                <input asp-for="Book.Authors" class="form-control" />
                <span asp-validation-for="Book.Authors" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="form-group">
                <label asp-for="Book.Price" class="control-label"></label>
                <input asp-for="Book.Price" class="form-control" />
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>

            <!-- Publishing Date -->
            <div class="form-group">
                <label asp-for="Book.PublishingDate" class="control-label"></label>
                <input asp-for="Book.PublishingDate" class="form-control" type="date" />
                <span asp-validation-for="Book.PublishingDate" class="text-danger"></span>
            </div>

            <!-- Publisher Name -->
            <div class="form-group">
                <label asp-for="Book.PublisherID" class="control-label"></label>
                <input asp-for="Book.PublisherID" class="form-control" />
                <span asp-validation-for="Book.PublisherID" class="text-danger"></span>
            </div>
